pipeline {
    agent any
    stages {
   
      stage('Build') {
        steps {
          git branch: 'main', url: 'https://github.com/NatalliaSem/Tests'
        }
      }
      stage('Test runs') {
        steps {
          echo 'Testing using tests'
          sh 'python3 tests.py'
        }
      }
      stage('Deploy') {
        steps {
         sh 'git checkout pre-prod'
         sh 'git merge main'
         sh 'git add .'
         sh 'git commit -m "comment"'
         sh 'git push origin pre-prod'         
        }
      }
      stage('Monitor') {
     steps {
       echo 'Well done!'
     }
   }
    }    
  }
